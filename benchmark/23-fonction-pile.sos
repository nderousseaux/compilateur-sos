
fact () { # n
    local p = 1 ;
    local i = 2 ;
    while test ${i} -le $1
    do
        p = $(expr ${p} * ${i}) ;
        i = $(expr ${i} + 1)
    done ;
    echo ${p}
} ;

choose () { # k n
    local fn = $(fact $2) ;
    local fk = $(fact $1) ;
    local fnk = $(fact $(expr $2 - $1)) ;
    echo $(expr ${fn} / ${fk} / ${fnk})
} ;

echo $(choose 3 5) "=10"

